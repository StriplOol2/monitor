{% extends "MonitorWebBundle:Security:layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block content %}
{% if error %}
    <div style="margin: 0 auto;
    width: 300px;text-align: center;" class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'messages') }}</div>
{% endif %}
    <div class="container">
        <form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            <h2 class="form-signin-heading">Авторизация</h2>
            <label for="inputEmail" class="sr-only">Email address</label>
            <input  class="form-control" placeholder="Login" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autofocus/>
            <label for="inputPassword" class="sr-only">Password</label>
            <input class="form-control" type="password" id="password" name="_password" required="required" placeholder="Password" />
            <div class="checkbox">
                <label>
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> Запомнить меня
                </label>
            </div>

            <input class="btn btn-lg btn-primary btn-block" type="submit" id="_submit" name="_submit" value="Войти" />
        </form>


    </div> <!-- /container -->
{% endblock content %}
